{
  "name": "@strattadb/environment",
  "version": "5.2.0",
  "description": "Environment variable configuration for Node.js made easy",
  "main": "dist/index.js",
  "homepage": "https://github.com/strattadb/environment",
  "repository": {
    "type": "git",
    "url": "https://github.com/strattadb/environment.git"
  },
  "scripts": {
    "build": "yarn tsc",
    "prebuild": "yarn clean",
    "clean": "rimraf dist",
    "typecheck": "yarn tsc --noEmit",
    "tsc": "tsc",
    "lint": "tslint --project .",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "yarn lint",
    "prelint:ci": "yarn typecheck",
    "lint:travis": "yarn lint:ci && commitlint-travis",
    "test": "jest",
    "test:watch": "yarn test --onlyChanged --watch",
    "test:ci": "yarn test --verbose --ci --coverage",
    "coverage": "codecov",
    "commit": "commit",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "environment",
    "variables",
    "env",
    "var",
    "config",
    "required",
    "validate",
    "configuration",
    "process.env"
  ],
  "author": {
    "name": "Diego Stratta",
    "email": "strattadb@gmail.com",
    "url": "https://diegostratta.com"
  },
  "bugs": {
    "url": "https://github.com/strattadb/environment/issues",
    "email": "strattadb@gmail.com"
  },
  "types": "dist/index.d.ts",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@commitlint/cli": "7.5.0",
    "@commitlint/config-conventional": "7.5.0",
    "@commitlint/prompt-cli": "7.5.0",
    "@commitlint/travis-cli": "7.5.0",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "@types/jest": "23.3.13",
    "@types/node": "10.12.21",
    "@types/validator": "10.9.0",
    "codecov": "3.1.0",
    "danger": "7.0.7",
    "husky": "1.3.1",
    "jest": "24.0.0",
    "lint-staged": "8.1.3",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "semantic-release": "15.13.3",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.3.1"
  },
  "dependencies": {
    "validator": "^10.7.1"
  },
  "engines": {
    "node": ">= 8"
  }
}
