{
  "compilerOptions": {
    "charset": "utf8",
    "module": "commonjs",
    "strict": true,
    "target": "ESNext",
    "outDir": "dist",
    "noEmitOnError": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noErrorTruncation": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
