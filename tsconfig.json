{
  "compilerOptions": {
    "charset": "utf8",
    "module": "commonjs",
    "strict": true,
    "target": "ESNext",
    "noEmitOnError": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noErrorTruncation": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "babel.config.js",
    "prettier.config.js",
    "lint-staged.config.js",
    "husky.config.js",
    "jest.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
